<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:context="http://www.springframework.org/schema/context"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <!-- Scanning controller annotations are externalize in a dedicated file to allow Functional Testing. Controllers will
    not be automatically instanciated during testing phase. -->
  <context:component-scan base-package="fr.keemto.web" />

  <bean class="org.springframework.social.connect.web.ConnectController">
    <constructor-arg value="http://localhost:8080/keemto" />
  </bean>

</beans>
